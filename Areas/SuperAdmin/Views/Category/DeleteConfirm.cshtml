@model Category
@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <p class="p-3 mb-2 bg-danger text-dark rounded text-center">Are you sure to delete this item?</p>
    <h2>@Model.Name</h2>
    <p>@Model.Desc</p>
    <a class="btn btn-danger mt-2" asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    <a class="btn btn-secondary mt-2" asp-controller="Category" asp-action="Index">Go to Back</a>
</div>